# aliases
alias uu='sudo apt update && sudo apt upgrade -y && sudo apt -f install && sudo apt autoclean && sudo apt autoremove -y'
alias se='apt search'
alias grep=' grep --color'
alias egrep='egrep --color'
alias fgrep='fgrep --color'
alias tshark='tshark --color'
alias ..='cd ..'
alias ins='sudo apt install -y'
alias lat='vim -b *.tex'
#alias cat='pygmentize -g'
alias die='sudo shutdown now -h'
alias rise='sudo reboot'
alias sys='sudo systemctl'
alias nmap='sudo nmap'
alias scan='sudo nmap -sP'
alias deb='sudo dpkg -i'
alias chk='sudo apt -f install'
alias t='task'
alias tl='task list'
alias tp='task add project:'
alias tt='task add'